        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv3Title"
        tools:text="2024/11/07 17:00:00" />

    <TextView
        android:id="@+id/tv4Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv4Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv4Title"
        tools:text="0.0100%" />

    <TextView
        android:id="@+id/tv5Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv5Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv5Title"
        tools:text="1.00%" />

    <TextView
        android:id="@+id/tv6Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv6Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv6Title"
        tools:text="0.50%" />

    <TextView
        android:id="@+id/tv7Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv7Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv7Title"
        tools:text="3756711979.11 USDT" />

    <TextView
        android:id="@+id/tv8Content"
        android:layout_width="wrap_content"
